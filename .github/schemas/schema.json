{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "A/B Test Configuration Schema",
  "type": "object",
  "properties": {
    "experiments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          },
          "rollout_percent": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          }
        },
        "required": [
          "id",
          "enabled"
        ]
      }
    },
    "featureFlags": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          }
        },
        "required": [
          "name",
          "enabled"
        ]
      }
    }
  },
  "required": [
    "experiments",
    "featureFlags"
  ]
}
