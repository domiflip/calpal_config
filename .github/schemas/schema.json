{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "A/B Test Configuration Schema",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_]+$": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "isActive": { "type": "boolean" },
        "variants": {
          "type": "array",
          "minItems": 1,
          "contains": {
            "type": "object",
            "properties": {
              "name": { "const": "control" }
            },
            "required": ["name"]
          },
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "weight": { "type": "integer", "minimum": 0 }
            },
            "required": ["name"]
          }
        }
      },
      "required": ["description", "isActive", "variants"]
    }
  }
}